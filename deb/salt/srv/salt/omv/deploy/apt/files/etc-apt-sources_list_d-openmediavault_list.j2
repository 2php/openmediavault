{% set repo_url = salt['pillar.get']('default:OMV_APT_REPOSITORY_URL', 'http://packages.openmediavault.org/public/') -%}
{% set distribution = salt['pillar.get']('productinfo:distribution') -%}
deb {{ repo_url }} {{ distribution }} main
deb https://openmediavault.github.io/packages/ {{ distribution }} main
# deb http://downloads.sourceforge.net/project/openmediavault/packages/ {{ distribution }} main

{%- if config.proposed %}
## Uncomment the following line to add software from the proposed repository.
deb {{ repo_url }} {{ distribution }}-proposed main
# deb https://openmediavault.github.io/packages/ {{ distribution }}-proposed main
# deb http://downloads.sourceforge.net/project/openmediavault/packages/ {{ distribution }}-proposed main
{%- endif %}

{%- if config.partner %}
## This software is not part of OpenMediaVault, but is offered by third-party
## developers as a service to OpenMediaVault users.
deb {{ repo_url }} {{ distribution }} partner
# deb https://openmediavault.github.io/packages/ {{ distribution }} partner
# deb http://downloads.sourceforge.net/project/openmediavault/packages/ {{ distribution }} partner
{%- endif %}
