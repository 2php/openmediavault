{
	"type": "config",
	"id": "conf.service.afp.share",
	"title": "AFP",
	"queryinfo": {
		"xpath": "//services/afp/shares/share",
		"iterable": true,
		"idproperty": "uuid"
	},
	"properties": {
		"uuid": {
			"type": "string",
			"format": "uuidv4"
		},
		"enable": {
			"type": "boolean",
			"default": false
		},
		"sharedfolderref": {
			"type": "string",
			"format": "uuidv4"
		},
		"comment": {
			"type": "string"
		},
		"password": {
			"type": "string",
			"maxLength": 8
		},
		"casefold": {
			"type": "string",
			"enum": [
				"none",
				"tolower",
				"toupper",
				"xlatelower",
				"xlateupper"
			],
			"default": "none"
		},
		"volsizelimit": {
			"type": "integer",
			"minimum": 0,
			"default": 0
		},
		"allowguest": {
			"type": "boolean",
			"default": true
		},
		"guestrw": {
			"type": "boolean",
			"default": false
		},
		"options": {
			"type": "object",
			"properties": {
				"ro": {
					"type": "boolean",
					"default": false
				},
				"upriv": {
					"type": "boolean",
					"default": false
				},
				"invisibledots": {
					"type": "boolean",
					"default": false
				},
				"tm": {
					"type": "boolean",
					"default": false
				}
			}
		},
		"extraoptions": {
			"type": "string"
		}
	}
}
