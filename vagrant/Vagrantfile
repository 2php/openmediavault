distro = ENV['DISTRO'] || "jessie"
hostname = "omv3box"
sata_controller_name = "SATA"
machine_name = "#{hostname}_#{distro}"

Vagrant.configure("2") do |config|
	case distro
	when "stretch"
		# Debian 9/Stretch
		config.vm.box = "remram/debian-9-amd64"
	else
		# Debian 8/Jessie
		config.vm.box = "debian/jessie64"
		# The SATA controller name is different in this box.
		sata_controller_name = "SATA Controller"
	end
	config.vm.define machine_name
	config.vm.provision :shell, :path => "install.sh"
	config.vm.network "private_network", ip: "192.172.16.22"
	config.vm.hostname = hostname
	config.vm.provider :virtualbox do |prov|
		prov.name = machine_name
		prov.memory = "2048"
		# Add some disks.
		for i in 0..2 do
			filename = "./disks/#{hostname}-disk#{i}.vmdk"
			unless File.exist?(filename)
				prov.customize ["createhd", "--filename", filename,
					"--size", 1000 * 1024]
				prov.customize ["storageattach", :id, "--storagectl",
					sata_controller_name, "--port", i + 1, "--device", 0,
					"--type", "hdd", "--medium", filename]
			end
		end
	end
	config.vm.provider :libvirt do |prov|
		prov.memory = "2048"
		# Add some disks.
		prov.storage :file, :size => "1G", :bus => "scsi"
		prov.storage :file, :size => "1G", :bus => "scsi"
		prov.storage :file, :size => "1G", :bus => "scsi"
	end
	config.vm.synced_folder "../deb", "/home/vagrant/openmediavault",
		:nfs => true,
		:mount_options => ["nolock,vers=3,udp,noatime,actimeo=1"]
	if Vagrant.has_plugin?("vagrant-cachier")
		config.cache.scope = :box
		config.cache.synced_folder_opts = {
			type: :nfs,
			mount_options: ["rw", "vers=3", "tcp", "nolock"]
		}
	end
end
